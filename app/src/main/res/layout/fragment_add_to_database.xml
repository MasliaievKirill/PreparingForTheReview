<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.AddToDatabaseFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_left"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Add item" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_personal_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal info"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_personal_info">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tf_first_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tf_last_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_automobile_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automobile info"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/tf_address"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_automobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_automobile_info">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_automobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_automobile_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Brand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tf_automobile_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_automobile_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_phone_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone numbers"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/tf_automobile_brand"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_first_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_phone_numbers">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_first_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_second_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Second phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tf_first_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_second_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />


            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_job_titles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job titles"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/tf_second_number"
                app:layout_constraintStart_toStartOf="parent"/>


            <CheckBox
                android:id="@+id/cb_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Director"
                app:layout_constraintTop_toBottomOf="@id/tv_job_titles"
                app:layout_constraintStart_toStartOf="parent"/>

            <CheckBox
                android:id="@+id/cb_software_engineer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Software engineer"
                app:layout_constraintTop_toBottomOf="@id/cb_director"
                app:layout_constraintStart_toStartOf="parent"/>

            <CheckBox
                android:id="@+id/cb_mechanical_engineer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mechanical engineer"
                app:layout_constraintTop_toBottomOf="@id/cb_software_engineer"
                app:layout_constraintStart_toStartOf="parent"/>

            <CheckBox
                android:id="@+id/cb_qa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QA"
                app:layout_constraintTop_toBottomOf="@id/cb_mechanical_engineer"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:id="@+id/btn_add_employee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add employee"
                app:layout_constraintTop_toBottomOf="@id/cb_qa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>